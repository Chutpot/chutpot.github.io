---
import { Image } from 'astro:assets';
import Logo from "../assets/markadark.svg"
import FavIcon from "../assets/favicon.png"
import "../styles/global.css";
import { Icon } from "astro-icon/components";

const {
  title = 'Chutpot',
  description = 'Game studio crafting atmospheric worlds with tight, replayable systems.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={Logo.src} />
    <meta name="theme-color" content="#0f1b3f" />
    <link rel="icon" href={FavIcon.src} />
  </head>
  <body class="bg-[color:var(--color-brand-900)] text-[color:var(--color-ink)]">
    <div class="mx-auto flex min-h-screen max-w-6xl flex-col px-6">
      <header class="flex items-center justify-between py-6">
        <a class="flex items-center gap-3 font-semibold tracking-tight" href="/">
          <Logo class="h-6 w-auto drop-shadow-lg" />
          <span class="sr-only">Chutpot</span>
        </a>
        <nav class="flex items-center gap-4 text-sm text-[color:var(--color-muted)]">
          <a class="rounded-full px-3 py-1 transition hover:bg-[color:var(--color-panel)] hover:text-white" href="/about">About</a>
          <a class="rounded-full px-3 py-1 transition hover:bg-[color:var(--color-panel)] hover:text-white" href="/games">Games</a>
          <a class="rounded-full px-3 py-1 transition hover:bg-[color:var(--color-panel)] hover:text-white" href="/contact">Contact</a>
        </nav>
      </header>

      <main class="flex-1 pb-16">
        <slot />
      </main>

      <footer class="border-t border-white/5 py-8 text-sm text-[color:var(--color-muted)]">
        <div class="grid grid-cols-1 gap-3 sm:grid-cols-[auto_1fr_auto] sm:items-center">
          <span>&copy; {new Date().getFullYear()} Chutpot</span>
          <a class="justify-self-center text-center hover:text-white" href="mailto:contact@chutpot.com">contact@chutpot.com</a>
          <div class="flex flex-wrap items-center justify-center gap-3 text-white/70 sm:justify-end">
            <a class="flex items-center gap-2 rounded-full bg-white/5 px-3 py-2 text-white transition hover:bg-white/10" href="https://facebook.com/chutpot">
              <Icon name="simple-icons:facebook" class="h-4 w-4" />
              <span class="sr-only">Facebook</span>
            </a>
            <a class="flex items-center gap-2 rounded-full bg-white/5 px-3 py-2 text-white transition hover:bg-white/10" href="https://x.com/chutpot">
              <Icon name="simple-icons:x" class="h-4 w-4" />
              <span class="sr-only">X</span>
            </a>
            <a class="flex items-center gap-2 rounded-full bg-white/5 px-3 py-2 text-white transition hover:bg-white/10" href="https://instagram.com/chutpot">
              <Icon name="simple-icons:instagram" class="h-4 w-4" />
              <span class="sr-only">Instagram</span>
            </a>
            <a class="flex items-center gap-2 rounded-full bg-white/5 px-3 py-2 text-white transition hover:bg-white/10" href="https://linkedin.com/company/chutpot">
              <Icon name="simple-icons:linkedin" class="h-4 w-4" />
              <span class="sr-only">LinkedIn</span>
            </a>
            <a class="flex items-center gap-2 rounded-full bg-white/5 px-3 py-2 text-white transition hover:bg-white/10" href="https://discord.gg/invite/VaNkqzkDyW">
              <Icon name="simple-icons:discord" class="h-4 w-4" />
              <span class="sr-only">Discord</span>
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
