---
import { Icon } from 'astro-icon/components';
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const games = await getCollection('games');
games.sort((a, b) => {
  const dateA = a.data.releaseDate ? new Date(a.data.releaseDate).getTime() : 0;
  const dateB = b.data.releaseDate ? new Date(b.data.releaseDate).getTime() : 0;
  return dateB - dateA;
});
const featured = games.slice(0, 3);
---

<Base title="Chutpot" description="Game studio building bold, atmospheric worlds.">
  <section class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
      <h1 class="text-4xl font-semibold leading-tight text-white sm:text-5xl">
        We build bold, atmospheric games with tight mechanics.
      </h1>
      <p class="max-w-2xl text-lg text-[color:var(--color-muted)]">
        Small team, big worlds. We mix deliberate art direction, responsive controls, and replayable systems to make games you want to
        come back to.
      </p>
      <div class="flex flex-wrap gap-3">
        <a
          href="/games"
          class="inline-flex items-center justify-center gap-2 rounded-full bg-[color:var(--color-brand-500)] px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-900/40 transition hover:bg-[color:var(--color-brand-600)]"
        >
          View our games <span aria-hidden="true">â†’</span>
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 rounded-full border border-white/15 px-5 py-3 text-sm font-semibold text-white transition hover:border-white/30 hover:text-[color:var(--color-brand-100)]"
        >
          Contact us
        </a>
      </div>
      <div class="grid gap-3 text-sm text-[color:var(--color-muted)] sm:grid-cols-3">
        <div class="rounded-2xl bg-white/5 p-4">
          <p class="text-xs uppercase tracking-[0.2em] text-[color:var(--color-muted)]">Focus</p>
          <p class="mt-1 text-white">Atmospheric worlds</p>
          <p>Mechanical depth</p>
        </div>
        <div class="rounded-2xl bg-white/5 p-4">
          <p class="text-xs uppercase tracking-[0.2em] text-[color:var(--color-muted)]">Build</p>
          <p class="mt-1 text-white">Unity & custom tools</p>
          <p>Responsive input</p>
        </div>
        <div class="rounded-2xl bg-white/5 p-4">
          <p class="text-xs uppercase tracking-[0.2em] text-[color:var(--color-muted)]">Ship</p>
          <p class="mt-1 text-white">PC & console</p>
          <p>Player-first updates</p>
        </div>
      </div>
    </div>
  </section>

  <section class="grid gap-6 md:grid-cols-2 mt-25 max-w-6xl mx-auto place-items-center">
  {games.map(({ slug, data }) => {
    const cover = data.coverVertical ?? data.coverHorizontal ?? data.cover ?? '/ChutpotLogo.png';
    return (
      <a
        href={`/games/${slug}/`}
        class="group relative block w-full max-w-xl overflow-hidden rounded-[var(--radius-xl)] bg-[color:var(--color-panel)] p-6 shadow-lg shadow-indigo-900/30 transition hover:-translate-y-1 hover:shadow-xl "
      >
        <div class="flex flex-col gap-4 md:flex-row md:items-center ">
          <div class="flex-1">
            <div class="flex items-center gap-3 text-xs uppercase tracking-[0.25em] text-[color:var(--color-muted)]">
              <span>{data.releaseDate ? new Date(data.releaseDate).getFullYear() : 'TBA'}</span>
              <span class="h-px flex-1 bg-white/10"></span>
            </div>
            <h2 class="mt-3 text-xl font-semibold text-white transition group-hover:text-[color:var(--color-brand-100)]">
              {data.title}
            </h2>
            <!--  <p class="text-sm text-[color:var(--color-muted)]">{data.tagline}</p> -->
            <p class="mt-2 text-[color:var(--color-muted)]">{data.description}</p>
            <div class="mt-4 inline-flex items-center gap-3 text-[color:var(--color-brand-100)]" aria-label="Platforms">
              {(data.platforms ?? []).map((platform) => {
                const p = platform.toLowerCase();
                if (p.includes('steam')) {
                  return <Icon name="simple-icons:steam" class="h-5 w-5" aria-label={platform} title={platform} />;
                }
                if (p.includes('switch')) {
                  return (
                    <Icon name="mdi:nintendo-switch"class="h-5 w-5"aria-label={platform}title={platform}
                    />
                  );
                }
                if (p.includes('epic')) {
                  return (
                    <Icon name="simple-icons:epicgames"class="h-5 w-5"aria-label={platform}title={platform}
                    />
                  );
                }
                  if (p.includes('simple-icons:xbox')) {
                  return (
                    <Icon name="simple-icons:xbox"class="h-5 w-5"aria-label={platform}title={platform}
                    />
                  );
                }
                return (
                  <span class="text-sm font-medium" aria-label={platform} title={platform}>
                    {platform}
                  </span>
                );
              })}
            </div>
          </div>
          <div class="relative overflow-hidden rounded-lg md:w-40 md:flex-shrink-0">
            <img
              src={cover}
              alt={`${data.title} cover art`}
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105 group-hover:opacity-90"
              loading="lazy"
            />
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[rgba(3,7,18,0.45)]"></div>
          </div>
        </div>
      </a>
    );
  })}
</section>

</Base>
