---
import { Icon } from 'astro-icon/components';
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';
import Image from 'astro/components/Image.astro';

const games = await getCollection('games');
games.sort((a, b) => {
  const dateA = a.data.releaseDate ? new Date(a.data.releaseDate).getTime() : 0;
  const dateB = b.data.releaseDate ? new Date(b.data.releaseDate).getTime() : 0;
  return dateB - dateA;
});
const latest = games[0];
const latestCover = latest ? latest.data.coverHorizontal ?? latest.data.coverVertical ?? latest.data.cover : undefined;
---

<Base title="Chutpot" description="Game studio building bold, atmospheric worlds.">
  <section class="flex flex-col items-center text-center h-[95vh] justify-center ">
    <div class="max-w-4xl space-y-6">
      <h1 class="text-4xl font-semibold leading-tight text-white sm:text-5xl">
        We build bold, atmospheric games with tight mechanics.
      </h1>
      <div class="flex flex-row justify-center items-center gap-3 mt-5">
        <a
          href="/games"
          class="inline-flex items-center justify-center gap-2 rounded-full bg-[color:var(--color-brand-500)] px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-900/40 transition hover:bg-[color:var(--color-brand-600)]"
        >
          View our games <span aria-hidden="true">→</span>
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 rounded-full border border-white/15 px-5 py-3 text-sm font-semibold text-white transition hover:border-white/30 hover:text-[color:var(--color-brand-100)]"
        >
          Contact us
        </a>
      </div>
    </div>
  </section>

  {latest && latestCover && (
    <section class="mb-8 mx-auto grid max-w-6xl grid-cols-1 gap-8 rounded-[var(--radius-xl)] bg-[color:var(--color-panel)]/80 p-6 shadow-xl shadow-indigo-900/30 ring-1 ring-white/10 backdrop-blur md:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.25em] text-[color:var(--color-muted)]">Latest release</p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">{latest.data.title}</h2>
        <p class="text-base text-[color:var(--color-muted)]">
          {latest.data.tagline ?? latest.data.description}
        </p>
        <div class="flex flex-wrap items-center gap-3 text-sm">
          <span class="rounded-full bg-white/10 px-3 py-1 text-[color:var(--color-brand-100)]">
            {latest.data.releaseDate
              ? new Date(latest.data.releaseDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })
              : 'Coming soon'}
          </span>
          {(latest.data.tags ?? []).slice(0, 2).map((tag) => (
            <span class="rounded-full border border-white/10 px-3 py-1 text-xs uppercase tracking-[0.2em] text-white">
              {tag}
            </span>
          ))}
        </div>
        <div class="flex flex-wrap items-center gap-4 text-sm text-[color:var(--color-muted)]">
          <span class="text-xs uppercase tracking-[0.25em]">Platforms</span>
          <div class="flex items-center gap-3 text-[color:var(--color-brand-100)]" aria-label="Platforms">
            {(latest.data.platforms ?? []).map((platform) => {
              const p = platform.toLowerCase();
              if (p.includes('steam')) {
                return <Icon name="simple-icons:steam" class="h-5 w-5" aria-label={platform} title={platform} />;
              }
              if (p.includes('switch')) {
                return (
                  <Icon name="mdi:nintendo-switch" class="h-5 w-5" aria-label={platform} title={platform} />
                );
              }
              if (p.includes('epic')) {
                return (
                  <Icon name="simple-icons:epicgames" class="h-5 w-5" aria-label={platform} title={platform} />
                );
              }
              if (p.includes('xbox')) {
                return <Icon name="simple-icons:xbox" class="h-5 w-5" aria-label={platform} title={platform} />;
              }
              return (
                <span class="text-sm font-medium" aria-label={platform} title={platform}>
                  {platform}
                </span>
              );
            })}
          </div>
        </div>
        <div class="flex flex-wrap gap-3">
          <a
            href={`/games/${latest.slug}/`}
            class="inline-flex items-center justify-center gap-2 rounded-full bg-[color:var(--color-brand-500)] px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-indigo-900/30 transition hover:bg-[color:var(--color-brand-600)]"
          >
            View the game <span aria-hidden="true">→</span>
          </a>
          <a
            href="/games"
            class="inline-flex items-center justify-center gap-2 rounded-full border border-white/15 px-4 py-2 text-sm font-semibold text-white transition hover:border-white/30 hover:text-[color:var(--color-brand-100)]"
          >
            Browse all
          </a>
        </div>
      </div>
      <div class="relative overflow-hidden rounded-[var(--radius-lg)] bg-black/30 ring-1 ring-white/10">
        <Image
          width={latestCover.width}
          height={latestCover.height}
          loading="eager"
          src={latestCover}
          alt={`${latest.data.title} cover art`}
          class="h-full w-full object-cover transition duration-700 ease-out hover:scale-[1.02]"
        />
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[rgba(3,7,18,0.45)]"></div>
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-r from-[rgba(3,7,18,0.4)] via-transparent to-transparent"></div>
      </div>
    </section>
  )}

</Base>
